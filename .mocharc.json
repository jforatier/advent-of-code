{
  "diff": true,
  "extension": ["spec.ts"],
  "package": "./package.json",
  "require": [
    "ts-node/register",
    "tsconfig-paths/register",
    "source-map-support/register"
  ],
  "recursive": true,
  "reporter": "spec",
  "ui": "bdd",
  "spec": "./src/**/*.spec.ts",
  "watch-files": ["src/**/*.ts", "src/**/*.ts"],
  "watch-ignore": ["lib/vendor"],
  "timeout": 15000
}
